<%- include("./includes/head.ejs") %>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
  <%- include("./includes/navigation.ejs") %>
  <div class="jumbotron">
    <div class="container">
      <h1><%= pageTitle %></h1>
    </div>
  </div>
  <div class="container">
    <div class="form-container row m-auto">
      <div class="col-md-2"></div>
      <div class="col-md-6">
        <h2>Episode bearbeiten</h2>
        <form class="addEpisodeForm" action="/episode-anpassen" method="post">
          <label for="episodeTitle">Albumtitel</label>
          <input type="text" name="episodeTitle" id="episodeTitle" value="<%= content.title %>">
          <label for="episodeNumber">Episode</label>
          <input type="text" name="episodeNumber" id="episodeNumber" value="<%= content.episodeNr %>">
          <label for="episodeImage">Titelbild</label>
          <input type="text" name="episodeImage" id="episodeImage"value="<%= content.img %>">
          <label for="episodeDescription">Beschreibung</label>
          <input type="text" name="episodeDescription" id="episodeDescription" value="<%= content.description %>">
          <input type="hidden" value="<%= content.id %>" name="episodeId">
          <button type="submit" class="btn btn-dark">Episode speichern</button>
        </form>
      <div class="col-md-2"></div>
    </div>
  </div>
</body>

</html>